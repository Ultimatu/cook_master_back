    "components": {
        "schemas": {
            "OTPVerif": {
                "title": "Modèle de Vérification OTP",
                "description": "Modèle pour gérer les processus de vérification OTP",
                "properties": {
                    "identifier": {
                        "description": "L'identifiant (ex: 'tondesouloc@gmail.com', '+225012345678')",
                        "type": "string",
                        "example": "user123"
                    },
                    "otp": {
                        "description": "Code OTP généré",
                        "type": "string",
                        "example": "123456"
                    },
                    "expires_at": {
                        "description": "Date et heure d'expiration de l'OTP",
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-08-19T15:00:00Z"
                    },
                    "is_verified": {
                        "description": "Indique si l'OTP a été vérifié",
                        "type": "boolean",
                        "example": false
                    },
                    "type": {
                        "description": "Le type de vérification (ex: 'email', 'phone_number')",
                        "type": "string",
                        "example": "email"
                    }
                },
                "type": "object"
            },
            "User": {
                "title": "Modèle Utilisateur",
                "description": "Modèle représentant un utilisateur du système",
                "properties": {
                    "first_name": {
                        "description": "Prénom de l'utilisateur",
                        "type": "string",
                        "example": "Jean"
                    },
                    "last_name": {
                        "description": "Nom de famille de l'utilisateur",
                        "type": "string",
                        "example": "Tonde"
                    },
                    "phone_number": {
                        "description": "Numéro de téléphone de l'utilisateur",
                        "type": "string",
                        "example": "+225012345678"
                    },
                    "email": {
                        "description": "Adresse email de l'utilisateur",
                        "type": "string",
                        "format": "email",
                        "example": "jean.tonde@example.com"
                    },
                    "password": {
                        "description": "Mot de passe de l'utilisateur (stocké de manière sécurisée)",
                        "type": "string",
                        "example": "password123"
                    },
                    "email_verified_at": {
                        "description": "Date et heure de la vérification de l'email",
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-08-19T15:00:00Z"
                    },
                    "remember_token": {
                        "description": "Jeton de session pour la fonctionnalité 'se souvenir de moi'",
                        "type": "string",
                        "example": "1d92b2b74c8f3405b8b1e3e7cdd9f5d9"
                    },
                    "emailOtpVerifications": {
                        "description": "Vérifications OTP associées à l'email de l'utilisateur",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/OTPVerif"
                        }
                    },
                    "phoneOtpVerifications": {
                        "description": "Vérifications OTP associées au numéro de téléphone de l'utilisateur",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/OTPVerif"
                        }
                    }
                },
                "type": "object"
            }
        },
